<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_button }}">
  <link rel="canonical" href="{{ canonical_url }}">

  {%- if settings.favicon -%}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png" />
  {%- endif -%}

  <title>{{ page_title }}{% if current_tags %} &ndash; {{ 'general.meta.tags' | t: tags: current_tags | join: ', ' }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}

  <!-- Social Meta Tags -->
  <meta property="og:site_name" content="{{ shop.name }}">
  <meta property="og:url" content="{{ canonical_url }}">
  <meta property="og:title" content="{{ page_title }}">
  <meta property="og:type" content="website">
  <meta property="og:description" content="{{ page_description | default: shop.description | default: shop.name }}">
  {% if settings.social_image_enable %}
    <meta property="og:image" content="{{ settings.share_image | img_url: '1200x1200' }}">
    <meta property="og:image:secure_url" content="{{ settings.share_image | img_url: '1200x1200' }}">
  {% endif %}

  <!-- Theme Stylesheet -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}

  <!-- Theme Javascript -->
  <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>

  <style>
    .announcement-bar {
      width: 100%;
      background-color: #FF0000;
      padding: 10px 0;
      color: white;
      text-align: center;
    }
    
    .announcement-text {
      margin: 0;
      font-size: 14px;
      font-weight: 600;
      display: none;
    }
    
    .announcement-text.active {
      display: block;
    }
    
    @media screen and (max-width: 768px) {
      .announcement-text {
        font-size: 12px;
      }
    }
  </style>

  {{ content_for_header }}

</head>

<body class="template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}">
  <a class="in-page-link visually-hidden skip-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>

  <!-- Announcement Bar directly in theme.liquid -->
  <div class="announcement-bar">
    <div class="page-width">
      <p class="announcement-text active" id="announcement-1">Free Shipping on Orders Over Rs. 2,000 🚚✨</p>
      <p class="announcement-text" id="announcement-2">Back-to-School Sale 🎒 Up to 30% OFF!</p>
      <p class="announcement-text" id="announcement-3">Buy 2, Get 1 FREE 👕👕👕</p>
      <p class="announcement-text" id="announcement-4">Limited Time Only ⏳ Don't Miss Out!</p>
      <p class="announcement-text" id="announcement-5">New Arrivals Just Dropped 🌈 Shop Now!</p>
    </div>
  </div>

  <div id="PageContainer" class="page-container">
    <div class="transition-body">
      
      <!-- You're now using the inline announcement bar above, so remove this section reference -->
      <!-- {% section 'announcement-bar' %} -->
      
      <header class="site-header">
        {% section 'header' %}
      </header>

      <main class="main-content" id="MainContent">
        {{ content_for_layout }}
      </main>

      <footer class="site-footer">
        {% section 'footer' %}
      </footer>

    </div>
  </div>

  <!-- Additional Scripts -->
  {% if settings.cart_type == 'drawer' %}
    {% include 'cart-drawer' %}
  {% endif %}
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var announcements = document.querySelectorAll('.announcement-text');
      var currentAnnouncement = 0;
      
      function showAnnouncement(n) {
        // Hide all announcements
        for (var i = 0; i < announcements.length; i++) {
          announcements[i].classList.remove('active');
        }
        
        // Show the current announcement
        announcements[n].classList.add('active');
      }
      
      function nextAnnouncement() {
        currentAnnouncement = (currentAnnouncement + 1) % announcements.length;
        showAnnouncement(currentAnnouncement);
      }
      
      // Initialize
      showAnnouncement(currentAnnouncement);
      
      // Auto advance announcements every 5 seconds
      setInterval(nextAnnouncement, 5000);
    });
  </script>
</body>
</html>