<div
  data-section-id="{{ section.id }}"
  data-section-type="horz-slider-section"
  class="horz-slider">

  {% if section.blocks.size > 0 %}
    <div class="horz-slider-wrapper">
      <div id="HorizontalSlider-{{ section.id }}"
          class="horz-slider__container horz-slider--{{ section.settings.section_height }} horz-slider--mobile--{{ section.settings.mobile_height }}"
          data-autoplay="{{ section.settings.autoplay }}"
          data-speed="{{ section.settings.autoplay_speed | times: 1000 }}"
          {% if section.settings.style == 'arrows' %}
            data-arrows="true"
          {% endif %}
          {% if section.settings.style == 'dots' %}
            data-dots="true"
          {% endif %}
          data-slide-count="{{ section.blocks.size }}">
          
        {% for block in section.blocks %}
          <div {{ block.shopify_attributes }} class="horz-slider__slide" data-id="{{ block.id }}">
            <div class="horz-slider__image-wrapper">
              {% comment %} Desktop image {% endcomment %}
              {% if block.settings.image != blank %}
                <div class="horz-slider__image desktop-image">
                  {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <img class="lazyload"
                      src="{{ block.settings.image | img_url: '300x' }}"
                      data-src="{{ img_url }}"
                      data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                      data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                      data-sizes="auto"
                      alt="{{ block.settings.image.alt | escape }}">
                  <noscript>
                    <img src="{{ block.settings.image | img_url: '2048x' }}" alt="{{ block.settings.image.alt | escape }}">
                  </noscript>
                </div>
              {% else %}
                <div class="horz-slider__image desktop-image">
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {% endif %}
              
              {% comment %} Mobile image {% endcomment %}
              {% if block.settings.mobile_image != blank %}
                <div class="horz-slider__image mobile-image">
                  {%- assign mobile_img_url = block.settings.mobile_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <img class="lazyload"
                      src="{{ block.settings.mobile_image | img_url: '300x' }}"
                      data-src="{{ mobile_img_url }}"
                      data-widths="[360, 540, 720, 900]"
                      data-aspectratio="{{ block.settings.mobile_image.aspect_ratio }}"
                      data-sizes="auto"
                      alt="{{ block.settings.mobile_image.alt | escape }}">
                  <noscript>
                    <img src="{{ block.settings.mobile_image | img_url: '900x' }}" alt="{{ block.settings.mobile_image.alt | escape }}">
                  </noscript>
                </div>
              {% endif %}
            </div>

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="horz-slider__link"></a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    <div class="placeholder-noblocks">
      {{ 'home_page.onboarding.no_content' | t }}
    </div>
  {% endif %}
</div>

<style>
  .horz-slider {
    position: relative;
    overflow: hidden;
  }

  .horz-slider-wrapper {
    width: 100%;
    position: relative;
  }

  .horz-slider__container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .horz-slider__slide {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .horz-slider__image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .horz-slider__image {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .horz-slider__image img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .horz-slider__link {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
  }

  /* Height settings for desktop */
  .horz-slider--250px {
    height: 250px;
  }

  .horz-slider--300px {
    height: 300px;
  }

  .horz-slider--350px {
    height: 350px;
  }

  .horz-slider--400px {
    height: 400px;
  }

  /* Mobile specific styles */
  @media only screen and (max-width: 768px) {
    .desktop-image {
      display: none !important;
    }

    .horz-slider--mobile--150px {
      height: 150px;
    }

    .horz-slider--mobile--200px {
      height: 200px;
    }

    .horz-slider--mobile--250px {
      height: 250px;
    }
  }

  @media only screen and (min-width: 769px) {
    .mobile-image {
      display: none !important;
    }
  }

  /* Slick slider overrides to make it work */
  .horz-slider .slick-list,
  .horz-slider .slick-track,
  .horz-slider .slick-slide {
    height: 100%;
  }

  .horz-slider .slick-slide > div {
    height: 100%;
  }
  
  .horz-slider .slick-dots {
    bottom: 10px;
  }
  
  .horz-slider .slick-arrow {
    z-index: 10;
  }
</style>

