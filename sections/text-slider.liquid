<style>
  .text-slider-wrapper {
    width: 100%;
    padding: 20px 0;
    overflow: hidden;
    position: relative;
  }
  
  .text-slider-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .text-slider {
    display: inline-flex;
    white-space: nowrap;
    animation: slider-scroll linear infinite;
    will-change: transform;
    position: relative;
  }
  
  .text-slide {
    display: inline-flex;
    align-items: center;
    padding: 0 20px;
  }
  
  .text-slide-content {
    font-family: "Caprasimo", serif;
    font-weight: 400;
    font-size: 24px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }
  
  .text-slide-separator {
    margin: 0 20px;
    font-size: 24px;
  }
  
  @keyframes slider-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  @media screen and (max-width: 768px) {
    .text-slide-content {
      font-size: 18px;
    }
    
    .text-slide-separator {
      margin: 0 10px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var textSliderElements = document.querySelectorAll('.text-slider');
    
    // Check if we have any text sliders on the page
    if (textSliderElements.length > 0) {
      textSliderElements.forEach(function(slider) {
        // Ensure the animation is playing
        slider.style.animationPlayState = 'running';
        
        // Make sure there's enough content for a smooth loop
        const firstSlide = slider.querySelector('.text-slide');
        if (firstSlide) {
          const sliderWidth = slider.scrollWidth / 2; // Half because we duplicated the slides
          
          // Set animation duration based on content length for smoother scrolling
          const speed = parseFloat(slider.style.animationDuration) || 15;
          slider.style.animationDuration = speed + 's';
        }
      });
    }
  });
</script>