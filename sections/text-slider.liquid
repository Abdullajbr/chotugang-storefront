<div class="text-slider-wrapper" style="background-color: {{ section.settings.background_color }};">
  <div class="text-slider-container">
    <div class="text-slider" style="animation-duration: {{ section.settings.scroll_speed }}s;">
      {% for block in section.blocks %}
        <div class="text-slide" {{ block.shopify_attributes }}>
          <span class="text-slide-content" style="color: {{ block.settings.text_color }};">{{ block.settings.slide_text }}</span>
          <span class="text-slide-separator">&nbsp;&nbsp;&nbsp;</span>
        </div>
      {% endfor %}
      
      {% comment %} Duplicate the slides for a seamless loop {% endcomment %}
      {% for block in section.blocks %}
        <div class="text-slide">
          <span class="text-slide-content" style="color: {{ block.settings.text_color }};">{{ block.settings.slide_text }}</span>
          <span class="text-slide-separator">&nbsp;&nbsp;&nbsp;</span>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

