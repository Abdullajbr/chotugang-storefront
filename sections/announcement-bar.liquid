<style>
  .announcement-bar {
    width: 100%;
    padding: 10px 0;
    text-align: center;
    position: relative;
    z-index: 5;
    transition: background-color 0.5s ease;
  }
  
  .announcement-text {
    margin: 0;
    font-size: 14px;
    font-weight: 600;
    color: {{ section.settings.use_custom_text_color ? section.settings.text_color : '#000000' }};
    font-family: 'Josefin Sans', sans-serif;
    letter-spacing: 0.02em;
  }
  
  .announcement-slider {
    position: relative;
    overflow: hidden;
    min-height: 24px; /* Increased height to ensure text is visible */
  }
  
  .announcement-slide {
    position: absolute;
    width: 100%;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    left: 0;
    right: 0;
  }
  
  .announcement-slide.active {
    opacity: 1;
    transform: translateY(0);
    position: relative;
  }
  
  @media screen and (max-width: 768px) {
    .announcement-text {
      font-size: 12px;
    }
    .announcement-slider {
      min-height: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var slides = document.querySelectorAll('.announcement-slide');
    var currentSlide = 0;
    var slideSpeed = {{ section.settings.slide_speed | default: 5 }} * 1000;
    var announcementBar = document.getElementById('announcementBar');
    var defaultColors = ["#ff1aff", "#ffff00", "#ff6b2c", "#33cfff", "#00c853"];
    
    function showSlide(n) {
      // Hide all slides
      for (var i = 0; i < slides.length; i++) {
        slides[i].classList.remove('active');
      }
      
      // Show the current slide with animation
      slides[n].classList.add('active');
      
      // Change the background color of the announcement bar
      var slideColor = slides[n].getAttribute('data-color');
      
      // If no custom color is set, use the default colors in sequence
      if (!slideColor || slideColor === "") {
        slideColor = defaultColors[n % defaultColors.length];
      }
      
      // Apply the color
      announcementBar.style.backgroundColor = slideColor;
    }
    
    function nextSlide() {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    }
    
    // Only setup carousel if there's more than one slide
    if (slides.length > 1) {
      // Make sure first slide is visible initially with its color
      showSlide(0);
      
      // Start slideshow
      setInterval(nextSlide, slideSpeed);
    } else if (slides.length === 1) {
      // If only one slide, make sure it's visible with its color
      showSlide(0);
    }
  });
</script>