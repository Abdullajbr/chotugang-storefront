<style>
  .announcement-bar {
    width: 100%;
    padding: 10px 0;
    color: white;
    text-align: center;
    position: relative;
    z-index: 5;
  }
  
  .announcement-text {
    margin: 0;
    font-size: 14px;
    font-weight: 600;
    color: white;
  }
  
  .announcement-slider {
    position: relative;
    overflow: hidden;
    min-height: 24px; /* Increased height to ensure text is visible */
  }
  
  .announcement-slide {
    position: absolute;
    width: 100%;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    left: 0;
    right: 0;
  }
  
  .announcement-slide.active {
    opacity: 1;
    transform: translateY(0);
    position: relative;
  }
  
  @media screen and (max-width: 768px) {
    .announcement-text {
      font-size: 12px;
    }
    .announcement-slider {
      min-height: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var slides = document.querySelectorAll('.announcement-slide');
    var currentSlide = 0;
    var slideSpeed = {{ section.settings.slide_speed | default: 5 }} * 1000;
    
    function showSlide(n) {
      // Hide all slides
      for (var i = 0; i < slides.length; i++) {
        slides[i].classList.remove('active');
      }
      
      // Show the current slide with animation
      slides[n].classList.add('active');
    }
    
    function nextSlide() {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    }
    
    // Only setup carousel if there's more than one slide
    if (slides.length > 1) {
      // Make sure first slide is visible initially
      slides[0].classList.add('active');
      
      // Start slideshow
      setInterval(nextSlide, slideSpeed);
    } else if (slides.length === 1) {
      // If only one slide, make sure it's visible
      slides[0].classList.add('active');
    }
  });
</script>